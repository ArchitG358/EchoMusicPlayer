<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/developer_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/joey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/developer_photo"
            android:id="@+id/developer_info"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="This app is made by joey Tribbiani as\n  part of Internshala's Online Android\n                   Training project."
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/developer_info"
            android:id="@+id/app_version"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"
            android:text="App version 1.0"/>
    </RelativeLayout>
</RelativeLayout>